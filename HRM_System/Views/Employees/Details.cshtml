@model Employee
@{
    ViewData["Title"] = "Details";
}

<h1>Employee Details</h1>
<br />
<br />

<div class="row">
    <div class="col-12">
        <div class="form-group">
            <label asp-for="Name" class="col-form-label">الاسم</label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Deparment" class="col-form-label">القسم</label>
            <input asp-for="Deparment" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Address" class="col-form-label">العنوان</label>
            <input asp-for="Address" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber" class="col-form-label">رقم التليفون</label>
            <input asp-for="PhoneNumber" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Gender" class="col-form-label">النوع</label>
            <input asp-for="Gender" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Nationality" class="col-form-label">الجنسية</label>
            <input asp-for="Nationality" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="Age" class="col-form-label">العمر</label>
            <input asp-for="Age" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="NationalID" class="col-form-label">الرقم القومي</label>
            <input asp-for="NationalID" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="WorkData.Salary" class="col-form-label">المرتب</label>
            <input asp-for="WorkData.Salary" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="WorkData.Dateofcontract" class="col-form-label">تاريخ التعاقد</label>
            <input asp-for="WorkData.Dateofcontract" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="WorkData.Attendance" class="col-form-label">موعد الحضور</label>
            <input asp-for="WorkData.Attendance" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="WorkData.Departure" class="col-form-label">موعد الانصراف</label>
            <input asp-for="WorkData.Departure" class="form-control" readonly />
        </div>

        <br />
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">تعديل</a> |


    </div>
</div>


