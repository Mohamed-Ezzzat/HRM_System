@model IEnumerable<Employee>

@{
    ViewData["Title"] = "All";
}

<h1>All</h1>

<a asp-action="Create" asp-controller="Employees" class="btn btn-primary">اضافة موظف جديد</a>
<br />
@if (Model.Count() > 0)
{

    <table class="table table-striped" border="1">
        <thead>
            <tr>
                <th>اسم الموظف</th>
                <th>العنوان</th>
                <th>رقم الهاتف</th>
                <th>القسم</th>
                <th>النوع</th>
                <th>الجنسية</th>
                <th>العمر</th>
                <th>الرقم القومي</th>
                <th>المرتب</th>
                <th>تاريخ التعاقد</th>
                <th>وقت الحضور</th>
                <th>وقت الانصراف</th>

                <th>العمليات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.Name)</td>
                    <td> @Html.DisplayFor(modelItem => item.Address) </td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td> @Html.DisplayFor(modelItem => item.Deparment)</td>
                    <td> @Html.DisplayFor(modelItem => item.Gender)</td>
                    <td> @Html.DisplayFor(modelItem => item.Nationality)</td>
                    <td>@Html.DisplayFor(modelItem => item.Age)</td>
                    <td>@Html.DisplayFor(modelItem => item.NationalID)</td>
                    <td> @Html.DisplayFor(modelItem => item.WorkData.Salary)</td>
                    <td> @Html.DisplayFor(modelItem => item.WorkData.Dateofcontract)</td>
                    <td> @Html.DisplayFor(modelItem => item.WorkData.Attendance)</td>
                    <td> @Html.DisplayFor(modelItem => item.WorkData.Departure)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">تعديل</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">عرض</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-warning">
        <h4> There is No Employee</h4>
    </div>
}