@using HRM_System.Contants
@model HRM_System.Models.GeneralSettings

@{
    ViewData["Title"] = "Edit";
}

<h1>GeneralSettings</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Additional" class="control-label">الاضافة</label>
                <input asp-for="Additional" class="form-control" />
                <span asp-validation-for="Additional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discount" class="control-label">الخصم</label>
                <input asp-for="Discount" class="form-control" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <h4>Weekends</h4>
            <div class="form-group">
                <label asp-for="Thedayofthefirstofficialvacation" class="control-label">يوم الاجازة الرسمي الاول</label>
                <select asp-for="Thedayofthefirstofficialvacation">
                    <option></option>
                    @foreach (var day in Enum.GetValues<WeekDay>())
                    {
                        <option>@day.ToString()</option>
                    }
                </select>
                <span asp-validation-for="Thedayofthefirstofficialvacation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Thesecondofficialvacationday" class="control-label">يوم الاجازة الرسمي الثاني</label>
                <select asp-for="Thesecondofficialvacationday">
                    <option></option>
                    @foreach (var day in Enum.GetValues<WeekDay>())
                    {
                        <option>@day.ToString()</option>
                    }
                </select>
                <span asp-validation-for="Thesecondofficialvacationday" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="All">Back to List</a>
</div>

