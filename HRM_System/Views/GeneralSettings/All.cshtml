@model IEnumerable<HRM_System.Models.GeneralSettings>

@{
    ViewData["Title"] = "All";
}

<h1>الاعدادات العامة </h1>

<table class="table">
    <thead>
        <tr>
            <th>
                الاضافي
            </th>
            <th>
                الخصم
            </th>
            <th>
               يوم الاجازه الاول
            </th>
            <th>
                يوم الاجازه الثاني ان وجد
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Additional)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thedayofthefirstofficialvacation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thesecondofficialvacationday)
            </td>
           
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
