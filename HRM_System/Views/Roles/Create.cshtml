@using Constants
@model RoleFormViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<string> Pages = new List<string>
    {
        "الموظفين", "اسم2", "اسم3", "اسم4",
        "الاعدادات العامة", "اسم6", "اسم7", "اسم8",
        "الحضور والانصراف", "اسم10", "اسم11", "اسم12",
       "تقرير الرواتب", "اسم14", "اسم15", "اسم16",
        "المستخدمين", "اسم18", "اسم19", "اسم20",
       "الاجازات الرسمية" , "اسم22", "اسم23", "اسم24"
    };
}

<h1>Create</h1>

<h4>Groups and Permissions</h4>
<hr />
<form method="post" asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="card mt-4">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> الصفحة </th>
                        <th> اضافة </th>
                        <th> حذف </th>
                        <th> تعديل </th>
                        <th> عرض </th>
                    </tr>

                </thead>
                <tbody>

                    @for (int i = 0; i <  Model.RoleCalims.Count; i += 4)
                    {

                        <tr>
                            <td>
                                @Pages[i]
                            </td>

                            @for (int j = i; j < i + 4 && j < Model.RoleCalims.Count; j++)
                            {
                                <td>
                                    <div class="form-check m-1">
                                        <input type="hidden" asp-for="@Model.RoleCalims[j].DisplayValue" />
                                        <input asp-for="@Model.RoleCalims[j].IsSelected" class="form-check-input" />

                                    </div>
                                </td>
                            }

                        </tr>

                    }
                </tbody>
            </table>

        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</form>
